<Window x:Class="TEMA_3.Views.UpdateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMA_3"
        mc:Ignorable="d"
        Title="UpdateRoom" Height="400" Width="300">
    <Grid>
        <Label Content="Room Type" Margin="10,45,207,290.8"/>
        <Label Content="Room Nr" Margin="10,103,207,232.8"/>
        <Label Content="Price" Margin="10,158,207,177.8"/>
        <Button Content="Submit" Margin="109,213,113,129.8" Command="{Binding SubmitRoomUpdateCommand}"/>
        <TextBox Margin="90,45,23,290.8" Text="{Binding RoomType}"/>
        <TextBox Margin="90,158,23,177.8" Text="{Binding RoomPrice}"/>
        <TextBox Margin="90,103,23,232.8" Text="{Binding RoomNr}"/>
    </Grid>
</Window>
