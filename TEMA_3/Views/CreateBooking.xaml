<Window x:Class="TEMA_3.Views.CreateBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMA_3"
        mc:Ignorable="d"
        Title="CreateBooking" Height="280" Width="333">
    <Grid>
        <Label Content="RoomNr" HorizontalAlignment="Left" Margin="33,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.089,-0.331"/>
        <Label Content="DateFrom" HorizontalAlignment="Left" Margin="33,84,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.089,-0.331"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="118,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Text="{Binding RoomNr}"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="118,185,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SubmitBookingCreation}"/>
        <Label Content="DateTo" HorizontalAlignment="Left" Margin="33,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.089,-0.331"/>
        <DatePicker Margin="118,85,62,127" SelectedDate="{Binding DateFrom}"/>
        <DatePicker Margin="118,127,62,87" SelectedDate="{Binding DateTo}"/>
    </Grid>
</Window>
